#! /usr/bin/env node

const program = require('commander')

const { version } = require('../package')

program
  .version(version)
  .usage('<command> [options]')
  .command('query <word>', 'query word by youdao dictionary').alias('q')
  .command('trans <text>', 'translate text by baidu translator').alias('t')
  .command('langs [from] [to]', 'toggle translator, default from [auto] to [zh]').alias('l')
  .command('show [options]', 'show current or all translator').alias('s')
  .parse(process.argv)

const { args: [cmd], _execs: execs } = program

if (!Object.keys(execs).includes(cmd)) {
  program.help()
}
